<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141218"
    tools:context=".ProfilePage">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:background="#AA89F3"
        android:textColor="#000000"
        android:textSize="48sp"
        />

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:layout_x="0dp"
        android:layout_y="110dp"
        android:src="@drawable/profilepic"
        android:textAlignment="center" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="295dp"
        android:text="MADHUMITHA K"
        android:id="@+id/name"
        android:textAlignment="center"
        android:textColor="#9DABF2"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="21dp"
        android:layout_y="370dp"
        android:text="210701141@rajalakshmi.edu.in"
        android:id="@+id/eid"
        android:textColor="#9DABF2"
        android:textSize="20dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="21dp"
        android:layout_y="440dp"
        android:text="Logout"
        android:id="@+id/logout"
        android:textColor="#9DABF2"
        android:textSize="20dp" />
</AbsoluteLayout>