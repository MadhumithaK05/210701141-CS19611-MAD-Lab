<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141218"
    tools:context=".Signup"
    >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Signup"
        android:textSize="48sp"
        android:background="#AA89F3"
        android:textColor="#000000"
         />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="#9DABF2"
        android:textSize="20sp"
        android:layout_x="38dp"
        android:layout_y="170dp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:textColor="#C4DBF7"
        android:layout_x="140dp"
        android:layout_y="160dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Id"
        android:textColor="#9DABF2"
        android:textSize="20sp"
        android:layout_x="38dp"
        android:layout_y="240dp" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#C4DBF7"
        android:inputType="textEmailAddress"
        android:layout_x="140dp"
        android:layout_y="230dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="#9DABF2"
        android:textSize="20sp"
        android:layout_x="38dp"
        android:layout_y="310dp" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#C4DBF7"
        android:layout_x="140dp"
        android:layout_y="300dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="89dp"
        android:layout_height="59dp"
        android:layout_x="38dp"
        android:layout_y="370dp"
        android:text="Confirm Password"
        android:textColor="#9DABF2"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/conpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#C4DBF7"
        android:layout_x="140dp"
        android:layout_y="370dp" />

    <Button
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="280dp"
        android:layout_y="442dp"
        android:text="Signup"
        android:backgroundTint="#D0BCFF"
        android:textColor="#432A7D"
         />
</AbsoluteLayout>